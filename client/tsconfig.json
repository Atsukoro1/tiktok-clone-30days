{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "#app": [
        "./node_modules/nuxt3/dist/app/index"
      ]
    },
    "types": [
      "@nuxtjs/axios", 
      "@types/node",
      "@nuxtjs/auth",
      "@nuxt/types"
    ]
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
